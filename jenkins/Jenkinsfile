pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -Denforcer.skip=true -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn -Denforcer.skip=true test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver yay') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
